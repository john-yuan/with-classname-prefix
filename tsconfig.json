{
  "include": [
    "src/**/*.ts",
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  }
}
